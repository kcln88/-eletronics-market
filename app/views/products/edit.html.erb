
<div class="container">
  <div class="m-5 border p-2 mb-2 border-opacity-25 " style="border-radius: 60px;">
    <div class="m-5">
      <%= simple_form_for @product do |f| %>
        <%= f.input :name %>
        <%= f.input :price %>
        <%= f.input :description %>
        <%= f.input :stock %>
        <%= f.input :category %>
        <%= f.input :photo_url %>
        <%= f.button :submit, class:"btn btn-success my-3", style: "width: 100%; border-radius: 40px; color:white;"  %>
      <% end %>
      <%= link_to 'Delete this product', product_path(@product), class:"btn btn-danger my-3", style: "width: 100%; border-radius: 40px; color:white;", data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this product?' } %>

    </div>
  </div>
</div>
