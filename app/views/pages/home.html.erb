</div>
<!-- Section: Categorias  -->

<h2 class="h2 margin-top-100"><strong>Produtos</strong></h2>


<div class="">
  <div class="container">
<!-- Section: Data Controller list-products 1 -->
    <div data-controller="list-products" data-list-products-total-value="<%= @products.count %>" class="data-controller-list">

<!-- Section: Botao Quantidade de Produtos -->
      <div class="d-flex flex-row-reverse">
        <div class="btn-group">
          <button data-list-products-target="textoAtual" class="btn btn-secondary btn-md" type="button">
            Mostrar 8 produtos
          </button>
          <button type="button" class="btn btn-sm btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
            <span class="visually-hidden">Toggle Dropdown</span>
          </button>
          <ul class="dropdown-menu">
            <li><a data-list-products-target="opcao1" class="dropdown-item" data-action="click->list-products#render1">Mostrar 8 produtos</a></li>
            <li><a data-list-products-target="opcao2" class="dropdown-item" data-action="click->list-products#render2">Mostrar 16 produtos</a></li>
            <li><a data-list-products-target="opcao3" class="dropdown-item" data-action="click->list-products#render3">Mostrar todos os xx produtos</a></li>
          </ul>
        </div>
      </div>
<!-- Section: Botao Quantidade de Produtos -->

<!-- Section: Cards -->
      <div class="gallery-card-jairo">
        <% @products.each_with_index do |product, index| %>
          <%= link_to product_path(product), data:{list_products_target:'item', index: index} do %>
            <div class="content-card">
              <%= cl_image_tag product.photos[0].key, class:"card-product-image border-radius-60"%>
              <h3><%= truncate(product.name, length: 12) %></h3>
              <h6>R$ <%= product.price %></h6>
              <p>Apenas <%= product.stock %> em estoque!</p>
              <button>Compre Agora</button>
            </div>
          <% end %>
        <% end %>
      </div>
<!-- Section: Cards -->

<!-- Section: Promocoes -->
