<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Venda Aqui", "/products/new", class: "nav-link mx-4" %>
          </li>
          <li class="nav-item dropdown d-flex flex-column justify-content-center">
            <p class = "menu d-flex justify-content-center"><strong>Olá, <%=current_user.first_name %></strong></p>
            <%= link_to "MINHA CONTA", "/minha-conta", data: { bs_toggle: "dropdown" }, aria: { haspopup: "true", expanded: "true" }, class: "minha-conta d-flex justify-content-center", style: "color:white;" %>
          <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
            <i class="fa-solid fa-bag-shopping"></i> <%= link_to"Meus Pedidos", "#", class: "dropdown-item" %>
            <%= link_to "Meus Anúncios", "#", class: "dropdown-item" %>
            <%= link_to "Finalizar Sessão", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
          </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Venda Aqui", new_user_session_path, class: "nav-link" %>
            <%= link_to "Entrar", new_user_session_path, class: "nav-link" %>
            <%= link_to "Registre-se", new_user_registration_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
